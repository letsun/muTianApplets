.info-img-title-right {
  position: absolute;
  right: 20rpx;
  top: 0;
  text-align: center;
  color: #fe6a00;
}
.info-img-title-right image {
  width: 27rpx;
  height: 29rpx;
}


.info-img-item {
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.info-img-item image {
  max-width: 200rpx;
  max-height: 140rpx;
  margin-right: 20px;
}

.info-img-item image:last-child {
  margin-right: 0;
}

.report-title {
  padding: 30rpx;
  font-weight: bold;
  font-size: 30rpx;
  display: flex;
}

.report-title image {
  width: 23rpx;
  height: 27rpx;
}
.report-title-inp  {
  position: relative;
  width: 300rpx;
  margin-left: 20rpx;
}

.report-title-inp image {
  position: absolute;
  left: 10rpx;
  top: 13rpx;
}
.report-title-inp input {
  padding-left: 35rpx;
  padding-right: 10rpx;
  border-radius: 10rpx;
  border: 1px solid #ddd;
}

.report-title-btn {
  display: flex;

}

.report-title-btn view {
  border: 1rpx solid #ddd;
  color: #666;
  border-radius: 10rpx;
  margin-left: 16rpx;
}



.report-con {
  padding: 0 30rpx;
}

.report-con-header {
  display: flex;
  background: #f6f6f6;
  padding: 15rpx 0;
}

.report-con-header-left {
  width: 60%;
  padding-left: 80rpx;
}

.report-con-header-right {
  width: 40%;
  text-align: right;
  padding-right: 80rpx;
}

.report-con-con {
  padding: 15rpx 0;
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.report-con-con:last-child {
  border: none;
}

.report-con-con-check {
  position: relative;
  width: 10%;
}

.box1 {
  position: absolute;
  left: 20rpx;
  top: 0rpx;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  margin: 0 10rpx 0 0rpx;
  border: 1px solid #ddd;
}


.box3 {
  position: absolute;
  left: 20rpx;
  top: 0rpx;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  margin: 0 10rpx 0 0rpx;
  border: 1px solid #fe6a00;
  background-image: repeating-radial-gradient(#fe6a00 0px, #fe6a00 10rpx, #fff 10rpx, #fff 20rpx);
} 

.report-con-con-left {
  width: 40%;
}

.report-con-con-middel {
  width: 20%;
  text-align: center;
  color: #fe6a00;
}

.report-con-con-middel image {
  max-height: 24rpx;
  max-width: 24rpx;
}

.report-con-con-right {
  width: 30%;
  text-align: center;
  color: #fe6a00;
}

.report-con-con-right image {
  max-height: 19rpx;
  max-width: 23rpx;
}

.tfooter {
  height: 100rpx;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
  color: #f4f4f4;
  background: #ff6b10;
}

.footer image {
  width: 220rpx;
  height: 30rpx;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.6);
}

.mask-con {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  width: 520rpx;
  border-radius: 15rpx;
}

.mask-con-title {
  position: relative;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.mask-close {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  padding: 0 20rpx;
}

.mask-con-title image {
  width: 26rpx;
  height: 21rpx;
}

.mask-con-con {
  text-align: center;
  line-height: 60rpx;
}

.mask-con-con .link {
  border-radius: 10rpx;
  margin: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 90%;
  border: 1rpx solid #eee;
  color: #666;
}

.mask-con-code {
  display: flex;
  width: 90%;
  margin: auto;
  padding-top: 20rpx;
  color: #666;
}

.mask-con-inp {
  padding: 0 30rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
  border: 1rpx solid #eee;
  color: #666;
}

.mask-con-footer {
  padding-top: 20rpx;
  text-align: center;
}

.mask-btna {
  padding: 10rpx 40rpx;
  border-radius: 10rpx;
  display: inline-block;
  margin: auto;
  border: 1rpx #fe6a10 solid;
  color: #fe6a10;
}

.mask-text {
  color: #999;
  font-size: 24rpx;
  padding: 20rpx 0;
}

.mask-btnb {
  padding: 10rpx 40rpx;
  border-radius: 10rpx;
  border: 1rpx #fe6a10 solid;
  color: #fe6a10;
  margin: 0 30rpx 0rpx 0rpx;
}


